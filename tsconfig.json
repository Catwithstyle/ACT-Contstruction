{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types",
      "./node_modules/swiper/types"
    ],
    "paths": {
      "@libs/*": ["./src/libs/*"],
      "@components/*": ["./src/components/*"]
    },
    "strict": true,
    "skipLibCheck": true
  }
}