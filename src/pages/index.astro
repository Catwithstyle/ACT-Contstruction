          tipo="simple"
        />
      </div>
      <div class="relarive z-50">
        <Card tipo="formulario"/>
      </div>

      <!-- Video de fondo -->
      <div class="absolute top-0 left-0 w-full h-full z-10 ">
        <video
          class="w-full h-full object-cover"
          autoplay
          muted
          loop
          src="/public/images/videos/video3.webm"
        ></video>
      </div>
    </section>
  </main>
