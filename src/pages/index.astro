---
import Layout from "../layouts/Layout.astro";
import InicioSeccion from "../components/InicioSeccion.astro";
import HeaderLanding from "../components/HeaderLanding.astro";
import AboutUsSeccion from "../components/AboutUsSeccion.astro";
import ServicesSeccion from "../components/ServicesSeccion.astro";
import OurProyectsSeccion from "../components/OurProyectsSeccion.astro";
import TestimonialSeccion from "../components/TestimonialSeccion.astro";
import ContacUsSeccion from "../components/ContactUsSeccion.astro";
---

<Layout title="ACT Construction & Water Solutions">
  <HeaderLanding />
  <main class="w-full pt-20">
    <div class="min-h-screen sm:min-h-[70vh] md:min-h-[70vh] bg-black dark:bg-dark-800">
      <InicioSeccion />
    </div>

    <div class="w-full min-h-[70vh] md:min-h-[90vh] py-0 bg-white dark:bg-dark-800">
      <AboutUsSeccion />
    </div>

    <div class="w-full min-h-[70vh] md:min-h-screen py-0 bg-white dark:bg-dark-800">
      <ServicesSeccion />
    </div>
    

    <div class="w-full min-h-[70vh] md:min-h-screen py-0 bg-white dark:bg-dark-800">
      <OurProyectsSeccion />
    </div>

    <div class="w-full min-h-[60vh] md:min-h-screen py-0 bg-white dark:bg-dark-800">
      <ContacUsSeccion />
    </div>

    <div class="w-full min-h-[100vh] md:min-h-screen py-0 bg-white dark:bg-dark-800">
      <TestimonialSeccion />
    </div>
  </main>
</Layout>
