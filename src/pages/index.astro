import AboutUsSeccion from "../components/AboutUsSeccion.astro";
import StatsSeccion from "../components/StatsSeccion.astro";

---

<Layout title="Welcome">

  <HeaderLanding/>
  <main class="relative w-full h-screen overflow-auto snap-y snap-mandatory scroll-smooth">
    <div class="snap-center">
      <InicioSeccion />
    </div>
    <div class="snap-center ">
      <AboutUsSeccion/>
    </div>
    <div class="snap-center">
      <InicioSeccion/>
    </div>
    
    <div class="snap-center">
      <?xml version="1.0" encoding="UTF-8"?>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="100" height="100" fill="#FFC107">
          <!-- Usuario central -->
          <circle cx="12" cy="10" r="3" />
          <path d="M12 14c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
          
          <!-- Usuarios laterales -->
          <circle cx="6" cy="10" r="2" />
          <circle cx="18" cy="10" r="2" />
          <path d="M4 18v-1c0-1.5 2.5-2.5 4-3" />
          <path d="M20 18v-1c0-1.5-2.5-2.5-4-3" />
      </svg>
      
    </div>
  </main>
  
</Layout>

