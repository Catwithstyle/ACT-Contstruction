---
import Layout from "../layouts/Layout.astro";
import Welcome from "../components/Welcome.astro"; // Asegúrate de que este componente existe
---

<Layout title="Welcome">
	<main>
		<header class="py-0 px-10 flex items-center fixed top-0 w-full justify-between z-40 bg-black bg-opacity-50 p-4">
			<div class="flex-grow flex basis-0">
				<img src="/images/iconC.svg" alt="Título" class="h-24 max-w-[100px]" />
			</div>

			<nav class="flex-grow flex">
				<ul class="flex gap-7 text-sm [&>li>a]:font-medium [&>li>a]:inline-block [&>li>a]:px-4 [&>li>a]:py-2 text-white z-50 relative">
					<li><a href="#" class="hover:text-gray-300">About Us</a></li>
					<li><a href="#" class="hover:text-gray-300">Projects</a></li>
					<li><a href="#" class="hover:text-gray-300">Clients</a></li>
					<li><a href="#" class="hover:text-gray-300">Services</a></li>
					<li><a href="#" class="hover:text-gray-300">Information</a></li>
				</ul>
			</nav>
		</header>

		<section class="bg-black h-screen w-screen text-center relative overflow-hidden z-30 flex justify-between items-center px-80">
			<!-- Sección 1 -->
			<div class="relative z-50">
				<div class="max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700">
					<h5 class="mb-2 text-2xl font-semibold tracking-tight text-gray-900 dark:text-white">
						Need help with a Claim?
					</h5>
					<p class="mb-3 font-normal text-gray-500 dark:text-gray-400">
						Follow our step-by-step guideline on how to certify your weekly benefits.
					</p>
					<a href="#" class="inline-flex font-medium items-center text-blue-600 hover:underline">
						See our guideline
						<svg class="w-3 h-3 ms-2.5 rtl:rotate-[270deg]" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 18 18">
							<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
								  d="M15 11v4.833A1.166 1.166 0 0 1 13.833 17H2.167A1.167 1.167 0 0 1 1 15.833V4.167A1.166 1.166 0 0 1 2.167 3h4.618m4.447-2H17v5.768M9.111 8.889l7.778-7.778"/>
						</svg>
					</a>
				</div>
			</div>
		
			<!-- Sección del formulario (Mis mismos estilos) -->
			<div class="relative z-50 max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700">
				<h5 class="mb-2 text-2xl font-semibold tracking-tight text-gray-900 dark:text-white">
					Regístrate
				</h5>
				<p class="mb-3 font-normal text-gray-500 dark:text-gray-400">
					Completa el formulario para continuar.
				</p>
		
				<form action="#" method="POST" class="space-y-4">
					<div>
						<label class="text-base font-medium text-gray-900 dark:text-white">Nombre</label>
						<input type="text" placeholder="Ingresa tu nombre"
							   class="block w-full p-3 text-black dark:text-white placeholder-gray-500 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:border-blue-600 dark:bg-gray-700"/>
					</div>
					<div>
						<label class="text-base font-medium text-gray-900 dark:text-white">Email</label>
						<input type="email" placeholder="Ingresa tu correo"
							   class="block w-full p-3 text-black dark:text-white placeholder-gray-500 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:border-blue-600 dark:bg-gray-700"/>
					</div>
					<div>
						<label class="text-base font-medium text-gray-900 dark:text-white">Teléfono</label>
						<input type="tel" placeholder="Ingresa tu número"
							   class="block w-full p-3 text-black dark:text-white placeholder-gray-500 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:border-blue-600 dark:bg-gray-700"/>
					</div>
					<div>
						<label class="text-base font-medium text-gray-900 dark:text-white">Tipo de Proyecto</label>
						<select class="block w-full p-3 text-black dark:text-white border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:border-blue-600 dark:bg-gray-700">
							<option value="">Selecciona un tipo</option>
							<option value="web">Desarrollo Web</option>
							<option value="app">Aplicación Móvil</option>
							<option value="software">Software Empresarial</option>
							<option value="otro">Otro</option>
						</select>
					</div>
					<button type="submit"
							class="w-full px-4 py-3 text-white bg-blue-600 rounded-md font-semibold hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
						Enviar
					</button>
				</form>
			</div>
		
			<!-- Video de fondo -->
			<div class="absolute top-0 left-0 w-full h-full z-10">
				<video class="w-full h-full object-cover" autoplay muted loop src="/public/images/videos/video3.webm"></video>
			</div>
		</section>
		
		
			<!-- Video de fondo -->
			<div class="absolute top-0 left-0 w-full h-full z-10">
				<video class="w-full h-full object-cover" autoplay muted loop src="/public/images/videos/video3.webm"></video>
			</div>
		</section>
		
	</main>
</Layout>
