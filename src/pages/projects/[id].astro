---
// src/pages/projects/[id].astro
import Layout from "../../layouts/Layout.astro";
import { projects } from "../../data/projects";
import { ArrowLeft } from "lucide-react";

export async function getStaticPaths() {
  return projects.map(project => ({
    params: { id: project.id.toString() },
    props: { project },
  }));
}

const { id } = Astro.params;
const { project } = Astro.props;

if (!project) {
  return Astro.redirect("/404");
}
---

<Layout title={`${project.title} | Nuestra Empresa`}>
  <style is:inline>
    .animate-fadein {
      animation: fadeIn 0.5s ease-out forwards;
    }
    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }
    .image-loading {
      background: linear-gradient(90deg, #f3f4f6 25%, #e5e7eb 50%, #f3f4f6 75%);
      background-size: 200% 100%;
      animation: shimmer 1.5s infinite;
    }
    @keyframes shimmer {
      to {
        background-position: -200% 0;
      }
    }
  </style>

  <main class="bg-gray-50 dark:bg-dark-800 min-h-screen animate-fadein">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 py-12 md:py-16">
      <a
        href="/#projects"
        onclick="window.close(); window.location.href='/'; return false;"
        class="inline-flex items-center text-yellow-600 dark:text-yellow-400 hover:text-yellow-700 dark:hover:text-yellow-300 mb-8 transition-colors"
      >
        <ArrowLeft className="w-5 h-5 mr-2" />
        Volver a Proyectos
      </a>

      <article class="bg-white dark:bg-dark-700 rounded-xl shadow-md overflow-hidden mb-10">
        <div class="aspect-w-16 aspect-h-9 image-loading">
          <img
            src={project.image}
            alt={project.alt}
            class="w-full h-full object-cover transition-opacity duration-300 opacity-0"
            loading="eager"
            width="800"
            height="450"
            onload="this.classList.remove('opacity-0'); this.parentElement.classList.remove('image-loading')"
          />
        </div>

        <div class="p-6 md:p-8">
          <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-3">
            {project.title}
          </h1>

          <p class="text-lg text-yellow-600 dark:text-yellow-400 mb-6">
            {project.description}
          </p>

          <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
            <div>
              <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-5">Fases del Proyecto</h3>
              <div class="space-y-6">
                <div class="flex">
                  <div class="flex flex-col items-center mr-4">
                    <div class="w-4 h-4 bg-yellow-500 rounded-full mt-1"></div>
                    <div class="w-px h-full bg-gray-300 dark:bg-gray-600"></div>
                  </div>
                  <div class="pb-6">
                    <h4 class="font-medium text-gray-900 dark:text-white">Evaluación Inicial</h4>
                    <p class="text-gray-600 dark:text-gray-400 text-sm">Análisis detallado del terreno</p>
                  </div>
                </div>
                <div class="flex">
                  <div class="flex flex-col items-center mr-4">
                    <div class="w-4 h-4 bg-yellow-500 rounded-full mt-1"></div>
                    <div class="w-px h-full bg-gray-300 dark:bg-gray-600"></div>
                  </div>
                  <div class="pb-6">
                    <h4 class="font-medium text-gray-900 dark:text-white">Ejecución</h4>
                    <p class="text-gray-600 dark:text-gray-400 text-sm">Limpieza profesional con maquinaria</p>
                  </div>
                </div>
                <div class="flex">
                  <div class="flex flex-col items-center mr-4">
                    <div class="w-4 h-4 bg-yellow-500 rounded-full mt-1"></div>
                  </div>
                  <div>
                    <h4 class="font-medium text-gray-900 dark:text-white">Resultado Final</h4>
                    <p class="text-gray-600 dark:text-gray-400 text-sm">Terreno listo para construcción</p>
                  </div>
                </div>
              </div>
            </div>

            {
              project.stats && (
                <div>
                  <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-5">Datos del Proyecto</h3>
                  <div class="grid grid-cols-2 gap-4">
                    {project.stats.map(stat => (
                      <div class="bg-gray-50 dark:bg-dark-600 p-4 rounded-lg text-center">
                        <div class="text-yellow-600 dark:text-yellow-400 text-2xl font-bold mb-1">{stat.value}</div>
                        <div class="text-gray-600 dark:text-gray-400 text-sm">{stat.label}</div>
                      </div>
                    ))}
                  </div>
                </div>
              )
            }
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
            <div class="bg-gray-50 dark:bg-dark-600 p-5 rounded-lg">
              <h3 class="font-semibold text-yellow-600 dark:text-yellow-400 mb-3 flex items-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"
                  ></path>
                </svg>
                Proceso Utilizado
              </h3>
              <p class="text-gray-700 dark:text-gray-300">
                ${project.details || "Técnicas especializadas adaptadas a las necesidades del terreno."}
              </p>
            </div>

            <div class="bg-gray-50 dark:bg-dark-600 p-5 rounded-lg">
              <h3 class="font-semibold text-yellow-600 dark:text-yellow-400 mb-3 flex items-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                  ></path>
                </svg>
                Beneficios Clave
              </h3>
              <ul class="space-y-2 text-gray-700 dark:text-gray-300">
                <li class="flex items-start">
                  <svg class="w-4 h-4 text-green-500 mt-1 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  Preparación óptima del terreno
                </li>
                <li class="flex items-start">
                  <svg class="w-4 h-4 text-green-500 mt-1 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  Eliminación segura de escombros
                </li>
              </ul>
            </div>
          </div>
        </div>
      </article>

      <div class="text-center">
        <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">¿Interesado en un proyecto similar?</h3>
        <p class="text-gray-600 dark:text-gray-300 mb-6 max-w-2xl mx-auto">
          Contáctanos para discutir cómo podemos ayudarte con tus necesidades.
        </p>
        <a
          href="/contacto"
          class="inline-block bg-yellow-600 hover:bg-yellow-700 text-white font-medium py-3 px-6 rounded-lg transition-colors"
        >
          Solicitar Presupuesto
        </a>
      </div>
    </div>
  </main>

  <style is:global>
    html {
      scroll-behavior: smooth;
    }
    body {
      overflow-x: hidden;
    }
    [x-cloak] {
      display: none !important;
    }
    .prose img {
      border-radius: 0.5rem;
      margin-top: 1rem;
      margin-bottom: 1rem;
    }
  </style>
</Layout>
