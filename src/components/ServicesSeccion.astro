---
// Íconos disponibles en lucide-react
import { Construction, Hammer, LandPlot, Droplet, ArrowDownWideNarrow } from "lucide-react";
---

<!-- Contenedor principal -->
<section class="w-full bg-gray-50 dark:bg-dark-800 py-12 md:py-20 transition-colors duration-300">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Título -->
    <div class="text-center mb-12 md:mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white">
        Our Services
      </h2>
      <div class="mx-auto mt-3 w-16 h-1 bg-yellow-400 dark:bg-yellow-500 rounded-full"></div>
    </div>

    <!-- ===== VERSIÓN ESCRITORIO ===== -->
    <div class="hidden md:grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Excavation -->
      <div class="bg-white dark:bg-dark-700 p-6 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 border-l-4 border-yellow-400 dark:border-yellow-500">
        <div class="flex items-center mb-4">
          <Construction className="w-10 h-10 text-yellow-500 dark:text-yellow-400 mr-4" />
          <h3 class="text-xl font-bold text-gray-800 dark:text-white">Excavation</h3>
        </div>
        <p class="text-gray-600 dark:text-gray-300">
          Precision site preparation for residential and commercial projects.
        </p>
      </div>

      <!-- Demolition -->
      <div class="bg-white dark:bg-dark-700 p-6 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 border-l-4 border-yellow-400 dark:border-yellow-500">
        <div class="flex items-center mb-4">
          <Hammer className="w-10 h-10 text-yellow-500 dark:text-yellow-400 mr-4" />
          <h3 class="text-xl font-bold text-gray-800 dark:text-white">Demolition</h3>
        </div>
        <p class="text-gray-600 dark:text-gray-300">
          Safe and efficient removal of existing structures.
        </p>
      </div>

      <!-- Trenching -->
      <div class="bg-white dark:bg-dark-700 p-6 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 border-l-4 border-yellow-400 dark:border-yellow-500">
        <div class="flex items-center mb-4">
          <ArrowDownWideNarrow className="w-10 h-10 text-yellow-500 dark:text-yellow-400 mr-4" />
          <h3 class="text-xl font-bold text-gray-800 dark:text-white">Trenching</h3>
        </div>
        <p class="text-gray-600 dark:text-gray-300">
          Solutions for drainage and public utility systems.
        </p>
      </div>

      <!-- Land Clearing -->
      <div class="bg-white dark:bg-dark-700 p-6 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 border-l-4 border-yellow-400 dark:border-yellow-500 lg:col-start-1">
        <div class="flex items-center mb-4">
          <LandPlot className="w-10 h-10 text-yellow-500 dark:text-yellow-400 mr-4" />
          <h3 class="text-xl font-bold text-gray-800 dark:text-white">Land Clearing</h3>
        </div>
        <p class="text-gray-600 dark:text-gray-300">
          Site preparation for new construction projects.
        </p>
      </div>

      <!-- Water Delivery -->
      <div class="bg-white dark:bg-dark-700 p-6 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 border-l-4 border-yellow-400 dark:border-yellow-500 lg:col-start-2">
        <div class="flex items-center mb-4">
          <Droplet className="w-10 h-10 text-yellow-500 dark:text-yellow-400 mr-4" />
          <h3 class="text-xl font-bold text-gray-800 dark:text-white">Water Delivery</h3>
        </div>
        <p class="text-gray-600 dark:text-gray-300">
          Non-potable water for irrigation and construction.
        </p>
      </div>
    </div>

    <!-- ===== VERSIÓN MÓVIL ===== -->
    <div class="md:hidden relative z-50 space-y-4">
      <!-- Excavation -->
      <div class="bg-white dark:bg-dark-700 p-5 rounded-lg shadow-md border-l-4 border-yellow-400 dark:border-yellow-500">
        <div class="flex items-center">
          <Construction className="w-8 h-8 text-yellow-500 dark:text-yellow-400 mr-3" />
          <h3 class="text-lg font-bold text-gray-800 dark:text-white">Excavation</h3>
        </div>
        <p class="mt-2 text-sm text-gray-600 dark:text-gray-300">
          Precision site preparation for residential and commercial projects.
        </p>
      </div>

      <!-- Demolition -->
      <div class="bg-white dark:bg-dark-700 p-5 rounded-lg shadow-md border-l-4 border-yellow-400 dark:border-yellow-500">
        <div class="flex items-center">
          <Hammer className="w-8 h-8 text-yellow-500 dark:text-yellow-400 mr-3" />
          <h3 class="text-lg font-bold text-gray-800 dark:text-white">Demolition</h3>
        </div>
        <p class="mt-2 text-sm text-gray-600 dark:text-gray-300">
          Safe and efficient removal of existing structures.
        </p>
      </div>

      <!-- Trenching -->
      <div class="bg-white dark:bg-dark-700 p-5 rounded-lg shadow-md border-l-4 border-yellow-400 dark:border-yellow-500">
        <div class="flex items-center">
          <ArrowDownWideNarrow className="w-8 h-8 text-yellow-500 dark:text-yellow-400 mr-3" />
          <h3 class="text-lg font-bold text-gray-800 dark:text-white">Trenching</h3>
        </div>
        <p class="mt-2 text-sm text-gray-600 dark:text-gray-300">
          Solutions for drainage and public utility systems.
        </p>
      </div>

      <!-- Land Clearing -->
      <div class="bg-white dark:bg-dark-700 p-5 rounded-lg shadow-md border-l-4 border-yellow-400 dark:border-yellow-500">
        <div class="flex items-center">
          <LandPlot className="w-8 h-8 text-yellow-500 dark:text-yellow-400 mr-3" />
          <h3 class="text-lg font-bold text-gray-800 dark:text-white">Land Clearing</h3>
        </div>
        <p class="mt-2 text-sm text-gray-600 dark:text-gray-300">
          Site preparation for new construction projects.
        </p>
      </div>

      <!-- Water Delivery -->
      <div class="bg-white dark:bg-dark-700 p-5 rounded-lg shadow-md border-l-4 border-yellow-400 dark:border-yellow-500">
        <div class="flex items-center">
          <Droplet className="w-8 h-8 text-yellow-500 dark:text-yellow-400 mr-3" />
          <h3 class="text-lg font-bold text-gray-800 dark:text-white">Water Delivery</h3>
        </div>
        <p class="mt-2 text-sm text-gray-600 dark:text-gray-300">
          Non-potable water for irrigation and construction.
        </p>
      </div>
    </div>
  </div>
</section>