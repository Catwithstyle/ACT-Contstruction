---
import Card from "../components/Card.astro";
import { Phone, ArrowDown, HardHat, Home, Map } from "lucide-react";
---

<!-- Sección para Desktop (igual a tu versión actual) -->
<section class="hidden lg:flex bg-white h-screen w-screen text-center relative overflow-hidden z-30 justify-center items-center gap-40">
  <!-- Cards -->
  <div class="relative z-50">
    <Card
      icon="helm"
      header1="Act Construction and water solutions"
      title="transform your land"
      subTitle="Experts in excavation and water solutions."
      title2="We lay the foundation for your next dream"
      paragraph="With over 10 years of experience, we provide top-quality excavation, demolition, trenching, land clearing, and water delivery services throughout Hawaii."
      link="/projects"
      tipo="simple"
    />
  </div>
  <div class="relative z-50">
    <Card tipo="formulario" />
  </div>

  <!-- Video de fondo -->
  <div class="absolute top-0 left-0 w-full h-full z-10">
    <video class="w-full h-full object-cover" autoplay muted loop src="/public/images/videos/video3.webm"></video>
  </div>
</section>


<!-- Sección para Móvil -->
<section class="lg:hidden relative min-h-screen w-screen overflow-hidden">
  <!-- Video de fondo -->
  <div class="fixed top-0 left-0 w-full h-full z-0">
    <video class="w-full h-full object-cover" autoplay muted loop src="/public/images/videos/video3.webm"></video>
  </div>
  
  <!-- Overlay oscuro -->
  <div class="fixed inset-0 bg-black/50 z-10"></div>

  <!-- Contenido principal -->
  <div class="relative z-20 min-h-screen flex flex-col justify-center items-center px-6 text-center text-white pb-20">~
    <!-- Título principal con animación -->
    <div class="animate-fade-in-down">
      <h1 class="text-5xl font-extrabold mb-3 tracking-tight font-montserrat">BUILD YOUR VISION</h1>
      <div class="w-24 h-1.5 bg-yellow-400 mb-8 mx-auto rounded-full"></div>
    </div>
    
    <!-- Tarjeta principal con efecto 3D -->
    <div class="bg-white/10 backdrop-blur-lg rounded-2xl p-8 max-w-md w-full border border-white/20 shadow-2xl transform transition-all hover:scale-[1.02] duration-300">
      <HardHat className="w-12 h-12 mx-auto mb-4 text-yellow-400" />
      <h2 class="text-3xl font-bold mb-3 font-montserrat uppercase tracking-wide">TRANSFORM YOUR LAND</h2>
      <p class="text-lg mb-6 leading-relaxed font-light font-open-sans">
        WE LAY THE FOUNDATION FOR YOUR NEXT DREAM
      </p>
      
      <!-- Botón principal -->
      <a href="/projects" class="inline-block bg-yellow-500 hover:bg-yellow-600 text-black font-bold py-4 px-8 rounded-xl mb-8 transition-all duration-300 transform hover:-translate-y-1 shadow-lg hover:shadow-xl uppercase tracking-wider text-sm font-montserrat">
        VIEW OUR PROJECTS
      </a>

      <!-- Mini tarjetas de servicios -->
      <div class="grid grid-cols-2 gap-3 mb-6">
        <div class="bg-black/20 p-3 rounded-lg border border-white/10">
          <Home className="w-6 h-6 mx-auto mb-2 text-yellow-400" />
          <span class="text-xs font-medium font-open-sans">Residential</span>
        </div>
        <div class="bg-black/20 p-3 rounded-lg border border-white/10">
          <Map className="w-6 h-6 mx-auto mb-2 text-yellow-400" />
          <span class="text-xs font-medium font-open-sans">Land Clearing</span>
        </div>
      </div>
    </div>

    <!-- Indicador para hacer scroll -->
    <div class="absolute bottom-10 left-0 right-0 flex flex-col items-center animate-bounce">
      <span class="text-sm font-medium mb-2 font-open-sans">EXPLORE MORE</span>
      <ArrowDown className="w-6 h-6 text-yellow-400" />
    </div>
  </div>

  <!-- Sección secundaria para scroll -->
  <div class="relative z-20 bg-gray-900 text-white pt-20 pb-32 px-6">
    <div class="max-w-md mx-auto">
      <h2 class="text-3xl font-bold mb-8 text-center font-montserrat">OUR EXPERTISE</h2>
      
      <div class="space-y-6">
        <div class="bg-gray-800/80 p-6 rounded-xl border-l-4 border-yellow-500">
          <h3 class="font-bold text-lg mb-2 font-montserrat">Excavation Services</h3>
          <p class="text-gray-300 font-open-sans">Precision excavation for any project size with our modern equipment.</p>
        </div>
        
        <div class="bg-gray-800/80 p-6 rounded-xl border-l-4 border-yellow-500">
          <h3 class="font-bold text-lg mb-2 font-montserrat">Water Solutions</h3>
          <p class="text-gray-300 font-open-sans">Comprehensive water delivery and management systems.</p>
        </div>
        
        <div class="bg-gray-800/80 p-6 rounded-xl border-l-4 border-yellow-500">
          <h3 class="font-bold text-lg mb-2 font-montserrat">Land Preparation</h3>
          <p class="text-gray-300 font-open-sans">Complete land clearing and grading for your construction needs.</p>
        </div>
      </div>

      <a href="#contact" class="mt-10 inline-flex items-center justify-center gap-2 bg-yellow-500 hover:bg-yellow-600 text-black font-bold py-4 px-8 rounded-xl transition-all duration-300 transform hover:-translate-y-1 shadow-lg hover:shadow-xl uppercase tracking-wider text-sm font-montserrat w-full">
        <Phone className="w-5 h-5" /> GET A FREE QUOTE
      </a>
    </div>
  </div>

  <!-- Fuentes -->
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700;900&family=Open+Sans:wght@300;400;600&display=swap');
    .font-montserrat { font-family: 'Montserrat', sans-serif; }
    .font-open-sans { font-family: 'Open Sans', sans-serif; }
    .animate-fade-in-down {
      animation: fadeInDown 1s ease-out forwards;
    }
    @keyframes fadeInDown {
      0% { opacity: 0; transform: translateY(-20px); }
      100% { opacity: 1; transform: translateY(0); }
    }
  </style>
</section>