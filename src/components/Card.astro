---
import { Icon } from 'astro-icon/components';

const { header1, icon, title, title2,subTitle, paragraph, link } = Astro.props;
---

<div class="max-w-sm bg-white rounded-2xl shadow-md overflow-hidden border border-gray-200">
    <!-- Icono -->
    {icon && (
         <div class="text-3xl  py-4">
            <img src={`/icons/${icon}.svg`} alt="Icon" class="w-10 h-10" />

        </div>
    )}

    <!-- Contenido -->
    <div class="p-4">
        <h3 class="text-lg font-bold text-black uppercase">{header1}</h3> 
        <h2 class="text-xl font-bold text-black">{title}</h2> 
        <h2 class="text-base font-semibold uppercase text-yellow-500">{title2} </h2>
        <h4 class="text-base font-semibold uppercase text-gray-500">{subTitle}</h4> 
        <p class="text-sm font-semibold text-black">{paragraph}</p> 

        <!-- Botón -->
        {link && (
            <a href={link} class="inline-block mt-4 px-4 py-2 bg-yellow-400 text-white text-sm font-medium rounded-lg hover:bg-yellow-500 transition">
                Ver más
            </a>
        )}
    </div>
</div>
