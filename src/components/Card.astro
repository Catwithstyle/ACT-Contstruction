---
const { header1, icon, title, subTitle, title2, paragraph, link } = Astro.props;
---

<div class="max-w-sm bg-white rounded-2xl shadow-md overflow-hidden border border-gray-200">
    <!-- icon -->
    {icon && <div class="text-xl">{icon}</div>} <!-- Mostrar icono si se pasa -->

    <!-- Content -->
    <div class="p-4">
        <h3 class="text-lg font-bold text-black uppercase">{header1}</h3> <!-- Aseguramos tamaño de texto adecuado -->
        <h2 class="text-xl font-bold text-black">{title}</h2> <!-- Título principal -->
        <h4 class="text-base font-semibold uppercase text-gray-500">{subTitle}</h4> <!-- Subtítulo -->
        <p class="text-sm font-semibold text-black">{paragraph}</p> <!-- Párrafo con texto más pequeño -->
        <!-- Button -->
        {link && (
            <a href={link} class="inline-block mt-4 px-4 py-2 bg-yellow-400 text-white text-sm font-medium rounded-lg hover:bg-yellow-500 transition">
                Ver más
            </a>
        )}
    </div>
</div>
